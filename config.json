{
  "source": ["output.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "files": [
        {
          "destination": "build/variables.css",
          "format": "css/variables"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "files": [
        {
          "destination": "build/variables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "json": {
      "transformGroup": "js",
      "files": [
        {
          "destination": "build/tokens.js",
          "format": "javascript/module"
        }
      ]
    }
  }
}
